@model estudo.Models.cadastAlunos

@{
    ViewBag.Title = "Delete";
}

<h2>Remover Aluno</h2>

<h3>Você tem certeza disso?</h3>
<div>

    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayName("Nome")
        </dt>

        <dd>
            @Html.DisplayFor(model => model.nome)
        </dd>

        <dt>
           @Html.DisplayName("Data de Nascimento")
        </dt>

        <dd>
            @Html.DisplayFor(model => model.dataNasc)
        </dd>

        <dt>
            @Html.DisplayName("RG")
        </dt>

        <dd>
            @Html.DisplayFor(model => model.RG)
        </dd>

        <dt>
            @Html.DisplayName("RA")
        </dt>

        <dd>
            @Html.DisplayFor(model => model.RA)
        </dd>

    </dl>

    @using (Html.BeginForm()) {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color">
            <input type="submit" value="Deletar" class="btn btn-default" /> |
            @Html.ActionLink("Voltar", "Index", new { id = "" }, new { @class = "btn btn-default"})
        </div>
    }
</div>
